<%- include ("../partials/header") %>
<div class="row justify-content-center">
    <h1 class="col-12 text-center my-4">Edit <%= blog.name %> </h1>
    <div class="col-12 col-md-6 col-lg-4">
        <form action="/pes/pf/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="blogtitle">Blog Title</label>
                <input class="form-control" id="blogtitle" type="text" name="blog[name]" value="<%= blog.name %>">
            </div>
            <div class="form-group">
                <label for="blogimage">Blog Image From Imgur</label>
                <input class="form-control" id="blogimage" type="text" name="blog[image]" value="<%= blog.image %>">
            </div>
            <div class="form-group">
                <label for="blogdesc">Blog Content</label>
                <textarea class="form-control" id="blogdesc" name="blog[description]" id="" cols="30"
                    rows="4"><%= blog.description %></textarea>
            </div>
            <div class="form-group">
                <label for="authornme">Author Name</label>
                <input class="form-control" id="authornme" type="text" name="blog[authorName]" value="<%= blog.authorName %> ">
            </div>
            <div class="form-group">
                <label for="auimg">Author Image</label>
                <input class="form-control" id="auimg" type="text" name="blog[authorImage]" value="<%= blog.authorImage %> ">
            </div>
            <div class="form-group">
                <label for="college">Author College</label>
                <input class="form-control" id="college" type="text" name="blog[authorCollege]" value="<%= blog.authorCollege %> ">
            </div>
            <div class="form-group">
                <label for="bio">Author Bio</label>
                <textarea id="bio" class="form-control" name="blog[authorBio]" id="" cols="30"
                    rows="4"><%= blog.authorBio %></textarea>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input name="blog[isExclusive]" class="form-check-input" type="radio" id="gridCheck" value="true">
                    <label class="form-check-label" for="gridCheck">
                        Exclusive
                    </label>
                </div>
                <div class="form-check">
                    <input name="blog[isExclusive]" class="form-check-input" type="radio" id="gridCheck" value="false">
                    <label class="form-check-label" for="gridCheck">
                        Community
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/pes/pf/blogs/<%= blog._id %>">Go Back</a>
    </div>
</div>
<%- include ("../partials/footer") %>
