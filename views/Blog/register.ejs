<%- include ("../partials/Blogheader") %>
<div class="row">
    <div class="container mainbody">
        <div class="container">
            <h1 class="text-center my-4">Sign Up</h1>
            <div class="row justify-content-center">
                <div class="col-xs-10 col-sm-6 col-md-4">
                    <form action="/pes/pf/register" method="post">
                        <div class="form-group">
                            <input class="form-control" type="text" name="username" placeholder="username">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="password" name="password" placeholder="password">
                        </div>
                        <div class="form-group d-none">
                            <input class="form-control" type="password" name="adminCode" placeholder="Admin Code">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-primary btn-block">Sign Up!</button>
                        </div>
                    </form>
                    <a href="/pes/pf/blogs">Go Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include ("../partials/Blogfooter") %>